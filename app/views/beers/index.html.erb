
<div class="container">
   <div class="separator">
  <h1>NOS BIERES DU MOMENT</h1>
  </div>
  <div class="row">
    <div class=beers>
    <% @beers.each do |beer|%>
      <div class="col-xs-1 col-sm-4">
        <div class="<%= beer.name.downcase %>">
          <img src="<%= asset_path 'logo.svg' %>">
        </div>
        <div class="beer-footer">
          <p><%= beer.name %></p>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>
